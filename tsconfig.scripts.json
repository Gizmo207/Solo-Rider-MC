{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist-scripts",
    "module": "CommonJS",
    "target": "ES2022",
    "lib": ["es2022", "dom"],
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": true,
    "skipLibCheck": true,
    "noEmit": false,
    "strict": true,
    "isolatedModules": false
  },
  "include": ["scripts/**/*.ts"]
}
